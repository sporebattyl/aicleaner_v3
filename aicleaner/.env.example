# Environment Variables for AICleaner V3
# Copy this file to .env and customize for your environment

# AI Provider API Keys
AICLEANER_GEMINI_API_KEY=your-gemini-api-key-here
# AICLEANER_OLLAMA_URL=http://localhost:11434

# Processing Configuration
AICLEANER_PRIVACY_LEVEL=fast
AICLEANER_BATCH_SIZE=10
AICLEANER_MAX_IMAGE_SIZE_MB=10.0

# MQTT/Home Assistant Configuration
AICLEANER_MQTT_HOST=localhost
AICLEANER_MQTT_PORT=1883
AICLEANER_MQTT_USERNAME=homeassistant
AICLEANER_MQTT_PASSWORD=your-mqtt-password

# Logging Configuration
AICLEANER_LOG_LEVEL=INFO
AICLEANER_LOG_FILE=/var/log/aicleaner.log

# Performance Settings
AICLEANER_MEMORY_LIMIT_MB=1024
AICLEANER_MAX_CONCURRENT_REQUESTS=5

# Security Settings
AICLEANER_ENABLE_RATE_LIMITING=true
AICLEANER_MAX_REQUESTS_PER_MINUTE=60

# Home Assistant Addon Specific
SUPERVISOR_TOKEN=your-supervisor-token
HASSIO_TOKEN=your-hassio-token